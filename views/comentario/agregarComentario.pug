extends ../layout
block content 
    include ../navbar
    .content(style="margin-top: 50px;" class="container")
        .content(style="margin: auto; text-align: center;" class="container")
            h1 Comenta no seas timido #{usuariologueado.username} !!!!
        .content(style="margin: auto; text-align: center;" class="container")
            form(action=`/comentario/agregarComentario/${id_publicacion}`, method="post")
                .row 
                    .md-3 
                        label(for="comentario", class="form-label", style="text-align: center; margin-top: 25px; margin-bottom: 25px;") Comentario
                        br
                        textarea(class="form-control", style="width: 400px; height: 200px; margin: auto;" name="texto", id="comentario", placeholder="Escribe tu Comnetario", rows="5")
                    .md-3(style="margin-top: 25px;")                     
                        input(type="submit", class="btn btn-info", value="Comentar")
                        a(class="btn btn-warning" style="margin-left: 10px" href="/") Volver 